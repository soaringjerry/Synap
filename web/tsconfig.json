{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next", "next/types/global", "next/navigation-types/compat"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".storybook"],
  "exclude": ["node_modules"]
}

